<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg_color"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="120dp" />

    <LinearLayout
        android:layout_width="@dimen/common_btn_with"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"


        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">


        <!--android:layout_marginBottom="@dimen/signin_btn_margin_bottom"-->

        <EditText
            android:id="@+id/signin_device_ip"
            android:layout_width="@dimen/common_btn_with"
            android:layout_height="@dimen/common_btn_height"
            android:layout_marginBottom="@dimen/password_text_margin_bottom"
            android:gravity="center"
            android:textColorHint="@color/input_hint"
            android:textSize="@dimen/login_text_size"
            android:hint="@string/login_device_ip"
            android:singleLine="true" />

        <EditText
            android:id="@+id/signin_username"
            android:layout_width="@dimen/common_btn_with"
            android:layout_height="@dimen/common_btn_height"
            android:layout_marginBottom="@dimen/password_text_margin_bottom"
            android:gravity="center"
            android:textColorHint="@color/input_hint"
            android:textSize="@dimen/login_text_size"
            android:hint="@string/login_device_admin"
            android:singleLine="true" />

        <EditText
            android:id="@+id/signin_password"
            android:layout_width="@dimen/common_btn_with"
            android:layout_height="@dimen/common_btn_height"
            android:layout_marginBottom="@dimen/password_text_margin_bottom"
            android:gravity="center"
            android:textColorHint="@color/input_hint"
            android:textSize="@dimen/login_text_size"
            android:hint="@string/login_device_pwd"
            android:inputType="textPassword"
            android:singleLine="true" />


        <Button
            android:id="@+id/login_commit_btn"
            android:layout_width="@dimen/common_btn_with"
            android:layout_height="@dimen/common_btn_height"
            android:background="@drawable/login_btn_color"
            android:gravity="center"
            android:text="@string/login_btn_login"
            android:textColor="@color/white"
            android:textSize="@dimen/login_btn_text_size" />
    </LinearLayout>


</LinearLayout>